<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Simulacro_MarioLlamaGarcia.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Simulacro_MarioLlamaGarcia"
    Shell.FlyoutBehavior="Flyout"
    Title="Simulacro_MarioLlamaGarcia">

    <FlyoutItem 
        Title="Home">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    </FlyoutItem>

    <FlyoutItem
        Title="NuevoTest">
        <ShellContent ContentTemplate="{DataTemplate local:NuevoTestPage}"
                      Route="nuevotest"/>
    </FlyoutItem>

    <FlyoutItem
        Title="ListadoTest">
        <ShellContent ContentTemplate="{DataTemplate local:ListadoTestPage}"
                      Route="listadotest" />
    </FlyoutItem>


</Shell>
